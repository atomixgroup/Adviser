<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/rounded_back"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="ir.codetower.moshaver.Fragments.MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/content"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView"
                    android:layout_width="128dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/appCompatTextView"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/m_logo"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:layout_centerVertical="true"
                    android:text="اطلاعات تماس"
                    android:textColor="#fff"
                    android:id="@+id/appCompatTextView" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_centerVertical="true"
                    android:text="info@gognuus.ir"
                    android:textColor="#fff" />
                <LinearLayout
                    android:id="@+id/mobile"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_call"
                        android:background="@drawable/rounded_back"
                        android:backgroundTint="#00ff00"
                        app:tint="#fff"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:text="شماره موبایل:"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tell"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_call"
                        android:background="@drawable/rounded_back"
                        android:backgroundTint="#00ff00"
                        app:tint="#fff"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_height="match_parent"
                        android:text="شماره ثایت:"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/telegram"
android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/ic_send"
                        android:background="@drawable/rounded_back"
                        android:backgroundTint="#0000ff"
                        app:tint="#fff"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:layout_height="match_parent"
                        android:text="آدرس تلگرام:"
                        android:textColor="#fff"/>
                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>
